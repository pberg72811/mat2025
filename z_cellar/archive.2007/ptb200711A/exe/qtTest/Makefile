#!/usr/bin/make
#------------------------------------------------------------------------------------------------
# File: Makefile                                                                                -
# Desc: C executable makefile.                                                                  -
# Hist: When       Who  What                                                                    -
#       07/11/2001 ptb  Initial Code.                                                           -
#       02/07/2006 ptb  Update for option trees.                                                -
#------------------------------------------------------------------------------------------------
SHELL      = /bin/sh
CC         = g++
EXECUTABLE = qtHello

#-------------------------------------------------------------------------------'
# Include directories requied.
#-------------------------------------------------------------------------------'
INCDIRS = -I $(STESWD)/inc        \
          -I $(STESWD)/inc/sys    \
          -I /usr/local/qt/include

#-------------------------------------------------------------------------------'
# Library directories requied.
#-------------------------------------------------------------------------------'
LIBDIRS = 

#-------------------------------------------------------------------------------'
# Sources requied.
#-------------------------------------------------------------------------------'
SRCS = $(EXECUTABLE).cc

#-------------------------------------------------------------------------------'
# Objects requied.
#-------------------------------------------------------------------------------'
OBJS = $(SRCS:.cc=.o)

#-------------------------------------------------------------------------------'
# Libraries requied.
#-------------------------------------------------------------------------------'
LIBS = /usr/local/qt/lib/libqt.so \
       /usr/local/qt/lib/libqui.so

#-------------------------------------------------------------------------------'
# Flags and such.
#-------------------------------------------------------------------------------'
CCFLAGS    = -Wall -g
DEFINES    =
DEPENDFLAG = -M
LKFLAGS    = -lm 

#------------------------------------------------------------------------------------------------
# Include the common make file.
#------------------------------------------------------------------------------------------------
THESWD = $(STESWD)
-include $(STESWD)/dev/make.rules
