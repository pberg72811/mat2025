#!/usr/bin/make
#------------------------------------------------------------------------------------------------
# File: Makefile                                                                                -
# Desc: C executable makefile.                                                                  -
# Hist: When       Who  What                                                                    -
#       07/11/2001 ptb  Initial Code.                                                           -
#       02/07/2006 ptb  Update for option trees.                                                -
#------------------------------------------------------------------------------------------------
SHELL      = /bin/sh
CC         = gcc
EXECUTABLE = phaseDetect

#------------------------------------------------------------------------------------------------
# Include directories requied.
#------------------------------------------------------------------------------------------------
INCDIRS = -I $(THESWD)/inc     \
          -I $(THESWD)/inc/sys 

#------------------------------------------------------------------------------------------------
# Library directories requied.
#------------------------------------------------------------------------------------------------
LIBDIRS = -L /usr/X11R6/lib \
          -L $(THESWD)/lib/ \
          -L /usr/lib       \

#------------------------------------------------------------------------------------------------
# Sources requied.
#------------------------------------------------------------------------------------------------
SRCS = $(EXECUTABLE).c

#------------------------------------------------------------------------------------------------
# Objects requied.
#------------------------------------------------------------------------------------------------
OBJS = $(SRCS:.c=.o)

#------------------------------------------------------------------------------------------------
# Libraries requied.
#------------------------------------------------------------------------------------------------
LIBS = $(THESWD)/lib/iccMallocUtils.so \
       $(THESWD)/lib/iccVectorUtils.so

#------------------------------------------------------------------------------------------------
# Flags and such.
#------------------------------------------------------------------------------------------------
CCFLAGS    = -Wall -g
DEFINES    =
DEPENDFLAG = -M
LKFLAGS    = -lm -lX11

#------------------------------------------------------------------------------------------------
# Include the common make file.
#------------------------------------------------------------------------------------------------
THESWD = $(STESWD)
-include $(STESWD)/dev/make.rules
