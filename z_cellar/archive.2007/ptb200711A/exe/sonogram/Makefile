#-------------------------------------------------------------------------------'
# C binary makefile.
#-------------------------------------------------------------------------------'
SHELL      = /bin/sh
CC         = gcc
EXECUTABLE = sonogram

#-------------------------------------------------------------------------------'
# Include directories requied.
#-------------------------------------------------------------------------------'
INCDIRS = -I $(STESWD)/inc     \
          -I $(STESWD)/inc/sys \
          -I /usr/X11R6/include

#-------------------------------------------------------------------------------'
# Library directories requied.
#-------------------------------------------------------------------------------'
LIBDIRS = -L $(STESWD)/lib/ \
          -L /usr/lib       \
          -L /usr/X11R6/lib

#-------------------------------------------------------------------------------'
# Sources requied.
#-------------------------------------------------------------------------------'
SRCS = $(EXECUTABLE).c

#-------------------------------------------------------------------------------'
# Objects requied.
#-------------------------------------------------------------------------------'
OBJS = $(SRCS:.c=.o)

#-------------------------------------------------------------------------------'
# Libraries requied.
#-------------------------------------------------------------------------------'
LIBS = $(STESWD)/lib/iccDSPUtils.so     \
       $(STESWD)/lib/iccMallocUtils.so  \
       $(STESWD)/lib/iccOrbitUtils.so   \
       $(STESWD)/lib/iccStackUtils.so   \
       $(STESWD)/lib/iccVectorUtils.so  \
       $(STESWD)/lib/iccXUtils.so

#-------------------------------------------------------------------------------'
# Flags and such.
#-------------------------------------------------------------------------------'
CCFLAGS    = -Wall -g 
DEFINES    =
DEPENDFLAG = -M
LKFLAGS    = -lm -lXm -lXt -lX11

#------------------------------------------------------------------------------------------------
# Include the common make file.
#------------------------------------------------------------------------------------------------
THESWD = $(STESWD)
-include $(STESWD)/dev/make.rules
