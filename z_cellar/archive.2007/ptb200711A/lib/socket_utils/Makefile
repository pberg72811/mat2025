SHELL      = /bin/sh
CC         = gcc
LIBRARY    = socket_utils

#-------------------------------------------------------------------------------'
# Include directories requied.
#-------------------------------------------------------------------------------'
INCDIRS = -I $(XMOPTS)/xmc/inc  \
          -I $(XMOPTS)/ged/inc

#-------------------------------------------------------------------------------'
# Library directories requied.
#-------------------------------------------------------------------------------'
LIBDIRS = -L $(XMOPTS)/ged/lib

#-------------------------------------------------------------------------------'
# Sources requied.
#-------------------------------------------------------------------------------'
SRCS = iccDatagramSocketReceive.c     \
       iccDatagramSocketSend.c        \
       iccSendMailMessage.c           \
       iccStreamSocketOpen.c          \
       iccStreamSocketListen.c        \
       iccStreamSocketReceive.c       \
       iccStreamSocketSend.c
#######       iccDatagramSocketSendWithAck.c \

#-------------------------------------------------------------------------------'
# Objects requied.
#-------------------------------------------------------------------------------'
OBJS = $(SRCS:.c=.o)

#-------------------------------------------------------------------------------'
# Libraries requied. (Usually left blank for libraries).
#-------------------------------------------------------------------------------'
LIBS =

#-------------------------------------------------------------------------------'
# Flags and such.
#-------------------------------------------------------------------------------'
CCFLAGS    = -Wall -g -fPIC
DEFINES    =
DEPENDFLAG = -M 

#------------------------------------------------------------------------------------------------
# Include the common make file.
#------------------------------------------------------------------------------------------------
THESWD = $(XMOPTS)/ged/
-include $(XMOPTS)/xmc/dev/make.rules
