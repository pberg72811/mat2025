    echo "/dev/sdd2 : start=        0, size=        0, Id= 0"  >> partitionTable_sdd
    echo "/dev/sdd3 : start=        0, size=        0, Id= 0"  >> partitionTable_sdd
    echo "/dev/sdd4 : start=        0, size=        0, Id= 0"  >> partitionTable_sdd

    echo "# partition table of /dev/sde"                        > partitionTable_sde
    echo "unit: sectors"                                       >> partitionTable_sde
    echo " "                                                   >> partitionTable_sde
    echo "/dev/sde1 : start=       63, size=3125156517, Id=83" >> partitionTable_sde
    echo "/dev/sde2 : start=        0, size=        0, Id= 0"  >> partitionTable_sde
    echo "/dev/sde3 : start=        0, size=        0, Id= 0"  >> partitionTable_sde
    echo "/dev/sde4 : start=        0, size=        0, Id= 0"  >> partitionTable_sde

    echo "# partition table of /dev/sdf"                        > partitionTable_sdf
    echo "unit: sectors"                                       >> partitionTable_sdf
    echo " "                                                   >> partitionTable_sdf
    echo "/dev/sdf1 : start=       63, size=3125156517, Id=83" >> partitionTable_sdf
    echo "/dev/sdf2 : start=        0, size=        0, Id= 0"  >> partitionTable_sdf
    echo "/dev/sdf3 : start=        0, size=        0, Id= 0"  >> partitionTable_sdf
    echo "/dev/sdf4 : start=        0, size=        0, Id= 0"  >> partitionTable_sdf

    echo "# partition table of /dev/sdg"                        > partitionTable_sdg
    echo "unit: sectors"                                       >> partitionTable_sdg
