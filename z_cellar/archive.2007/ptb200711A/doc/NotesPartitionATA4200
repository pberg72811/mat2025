Create the partitions

    echo "# partition table of /dev/sda"                        > partitionTable_sda
    echo "unit: sectors"                                       >> partitionTable_sda
    echo " "                                                   >> partitionTable_sda
    echo "/dev/sda1 : start=       63, size=3906445662, Id=83" >> partitionTable_sda
    echo "/dev/sda2 : start=        0, size=        0, Id= 0"  >> partitionTable_sda
    echo "/dev/sda3 : start=        0, size=        0, Id= 0"  >> partitionTable_sda
    echo "/dev/sda4 : start=        0, size=        0, Id= 0"  >> partitionTable_sda

    echo "# partition table of /dev/sdb"                        > partitionTable_sdb
    echo "unit: sectors"                                       >> partitionTable_sdb
    echo " "                                                   >> partitionTable_sdb
    echo "/dev/sdb1 : start=       63, size=3906445662, Id=83" >> partitionTable_sdb
    echo "/dev/sdb2 : start=        0, size=        0, Id= 0"  >> partitionTable_sdb
    echo "/dev/sdb3 : start=        0, size=        0, Id= 0"  >> partitionTable_sdb
    echo "/dev/sdb4 : start=        0, size=        0, Id= 0"  >> partitionTable_sdb

    echo "# partition table of /dev/sdc"                        > partitionTable_sdc
    echo "unit: sectors"                                       >> partitionTable_sdc
    echo " "                                                   >> partitionTable_sdc
