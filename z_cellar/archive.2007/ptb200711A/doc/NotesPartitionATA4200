    echo "/dev/sdh2 : start=        0, size=        0, Id= 0"  >> partitionTable_sdh
    echo "/dev/sdh3 : start=        0, size=        0, Id= 0"  >> partitionTable_sdh
    echo "/dev/sdh4 : start=        0, size=        0, Id= 0"  >> partitionTable_sdh

    echo "# partition table of /dev/sdi"                        > partitionTable_sdi
    echo "unit: sectors"                                       >> partitionTable_sdi
    echo " "                                                   >> partitionTable_sdi
    echo "/dev/sdi1 : start=       63, size=2343867372, Id=83" >> partitionTable_sdi
    echo "/dev/sdi2 : start=        0, size=        0, Id= 0"  >> partitionTable_sdi
