#!/usr/bin/make
#------------------------------------------------------------------------------------------------
# File: Makefile                                                                                -
# Desc: C executable makefile.                                                                  -
# Hist: When       Who  What                                                                    -
#       04/27/2006 ptb  Initial Code.                                                           -
#------------------------------------------------------------------------------------------------
SHELL      = /bin/sh
CC         = gcc
EXECUTABLE = xmlTest

#-------------------------------------------------------------------------------'
# Include directories requied.
#-------------------------------------------------------------------------------'
INCDIRS = -I $(STESWD)/inc              \
          -I $(STESWD)/inc/sys          \
          -I /usr/include/libxml2

#-------------------------------------------------------------------------------'
# Library directories requied.
#-------------------------------------------------------------------------------'
LIBDIRS = 

#-------------------------------------------------------------------------------'
# Sources requied.
#-------------------------------------------------------------------------------'
SRCS = $(EXECUTABLE).cc

#-------------------------------------------------------------------------------'
# Objects requied.
#-------------------------------------------------------------------------------'
OBJS = $(SRCS:.cc=.o)

#-------------------------------------------------------------------------------'
# Libraries requied.
#-------------------------------------------------------------------------------'
LIBS = 


#-------------------------------------------------------------------------------'
# Flags and such.
#-------------------------------------------------------------------------------'
CCFLAGS    = -Wall -g
DEFINES    =
DEPENDFLAG = -M
LKFLAGS    = -lm -lxml2

#------------------------------------------------------------------------------------------------
# Include the common make file.
#------------------------------------------------------------------------------------------------
THESWD = $(STESWD)
-include $(STESWD)/dev/make.rules
