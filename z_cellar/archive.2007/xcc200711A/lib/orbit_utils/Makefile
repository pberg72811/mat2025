#!/usr/bin/make
#------------------------------------------------------------------------------------------------
# File: Makefile                                                                                -
# Desc: C library makefile.                                                                     -
# Hist: When       Who  What                                                                    -
#       07/11/2001 ptb  Initial Code.                                                           -
#       02/07/2006 ptb  Update for option trees.                                                -
#------------------------------------------------------------------------------------------------
SHELL      = /bin/sh
CC         = gcc
LIBRARY    = orbit_utils

#------------------------------------------------------------------------------------------------
# Include directories requied.
#------------------------------------------------------------------------------------------------
INCDIRS = -I $(XMOPTS)/xmc/inc \
          -I $(XMOPTS)/xcc/inc

#------------------------------------------------------------------------------------------------
# Library directories requied.
#------------------------------------------------------------------------------------------------
LIBDIRS = -L $(XMOPTS)/xcc/lib

#------------------------------------------------------------------------------------------------
# Sources requied.
#------------------------------------------------------------------------------------------------
SRCS = xccOrbitUtils.c            \
       xccCalcDirCos.c            \
       xccDirCos2AzEl.c           \
       xccGetPhiGrn.c             \
       xccJ2.c                    \
       xccRa2lon.c                \
       xccReadTLE.c               \
       xccReadLLA.c               \
       xccSatDataList.c           \
       xccSatUpdateSGP.c          \
       xccSatUpdateJ2.c           \
       xccStatDataList.c          \
       xccStatUpdate.c            \
       xccSGP.c                   \
       xccTrueToFromMeanAnomaly.c \
       xccvLatLonAlt2XYZ.c        \
       xccvXYZ2LatLonAlt.c        \
       xccvPitchXYZ.c             \
       xccvRollXYZ.c              \
       xccvYawXYZ.c               \
       xccSatStack.c 

#------------------------------------------------------------------------------------------------
# Objects requied.
#------------------------------------------------------------------------------------------------
OBJS = $(SRCS:.c=.o)

#------------------------------------------------------------------------------------------------
# Libraries requied. (Usually left blank for libraries).
#------------------------------------------------------------------------------------------------
LIBS =

#------------------------------------------------------------------------------------------------
# Flags and such.
#------------------------------------------------------------------------------------------------
CCFLAGS    = -Wall -g -fPIC
DEFINES    =
DEPENDFLAG = -M 

#------------------------------------------------------------------------------------------------
# Include the common make file.
#------------------------------------------------------------------------------------------------
THESWD = $(XMOPTS)/xcc
-include $(XMOPTS)/xmc/dev/make.rules
